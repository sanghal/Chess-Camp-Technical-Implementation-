<h3>Log In</h3>

<%= form_tag sessions_path do %>

	<div class="control-group">
    <%= label_tag :username %>
    <div class="controls">
      <%= text_field_tag :username, params[:username] %>
    </div>
  </div>

	<div class="control-group">
    <%= label_tag :password_digest %>
    <div class="controls">
      <%= password_field_tag :password_digest %>
    </div>
  </div>

  <div class="actions"><%= submit_tag "Log In" %></div>
<% end %>