<%= simple_form_for @registration, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Registration </legend>

		<%= f.input :camp_id, collection: Camp.upcoming.active.alphabetical , input_html: {class: "avg"} %>		
		<%= f.input :student_id, collection: Student.active.alphabetical, input_html: {class: "avg"} %>
		<%= f.input :payment_status, collection: %w[deposit full] %>
		<%= f.input :points_earned %>
    <p>&nbsp;</p>

    <div class="form-actions">
      <%= f.submit nil, class: 'button radius' %>
   
    </div>
  </fieldset>
<% end %>